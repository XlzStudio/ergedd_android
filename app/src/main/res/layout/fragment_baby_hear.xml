<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".bbtfragment.BabyHearFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.design.widget.TabLayout
        android:id="@+id/babyhear_tab"
        android:layout_width="match_parent"
        app:tabIndicatorColor="@color/green"
        app:tabSelectedTextColor="@color/green"
        android:layout_height="wrap_content" />

    <android.support.v4.view.ViewPager
        android:id="@+id/babyhear_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/audio_player_play"
            android:id="@+id/play_babyhear"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name_play_babyhear"
                android:text="彩虹花"/>
            <LinearLayout
                android:layout_below="@id/name_play_babyhear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/progress_play_babyhear"
                    android:text="01:07"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lenth_play_babyhear"
                    android:text="05:13"/>
            </LinearLayout>
        </RelativeLayout>
        <ImageView
            android:layout_marginLeft="170dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/audio_player_prev"
            android:id="@+id/play_up_babyhear"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/audio_player_next"
            android:id="@+id/play_next_babyhear"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/audio_player_next"
            android:id="@+id/play_word_babyhear"/>
    </LinearLayout>

</LinearLayout>