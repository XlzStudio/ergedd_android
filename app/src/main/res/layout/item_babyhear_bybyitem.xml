<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/babyitem_iv"
                android:layout_width="65dp"
                android:layout_height="65dp" />

            <TextView
                android:textSize="17dp"
                android:textColor="#000000"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/babyitem_iv"
                android:layout_alignTop="@id/babyitem_iv"
                android:id="@+id/babyitem_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手指家族" />

            <TextView
                android:id="@+id/babyitem_text"
                android:lines="1"
                android:layout_margin="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/babyitem_title"
                android:layout_toRightOf="@id/babyitem_iv"
                android:text="动动手指学英文" />

            <ImageView
                android:id="@+id/babyitem_music"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/babyitem_iv"
                android:layout_alignBottom="@id/babyitem_iv"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/icon_music_grey" />

            <TextView
                android:layout_marginLeft="1dp"
                android:layout_toRightOf="@id/babyitem_music"
                android:layout_alignTop="@id/babyitem_music"
                android:id="@+id/babyitem_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="31首" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>